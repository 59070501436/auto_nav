<?xml version="1.0"?>

<launch>
  <!-- Setting the Initial Parameters.  -->
  <arg name="x" default="-15.0"/> #-11.25
  <arg name="y" default="7.55"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <!-- Choose the environment.  -->
  <arg name="use_carrot_planner" default="false"/>
  <arg name="with_teleoperation" default="false" />
  <arg name="use_amcl" default="false"/>
  <arg name="use_open_fields" default="true"/>
  <arg name="robot_name" default="" />
  <arg name="tf_prefix" default="" />
  <arg name="robot_model" default="$(find rasberry_agricultural_costmaps)/config/robot.yaml"/>
  <arg name="model_extras" default="$(find rasberry_agricultural_costmaps)/urdf/sensors_sim.xacro"/>

  <!-- Set the maps, joystick, gui -->
  <arg name="gui" default="true"/>
  <arg name="db_path" default="/home/saga/mongodb"/>
  <arg name="topo_map" default="open_fields" />
  <arg name="joy_dev" default="/dev/input/js0" />
  <param name="use_sim_time" value="true" />
  <arg name="map_file" default="$(find rasberry_agricultural_costmaps)/maps/white_image.yaml"/>
  <arg name="world_name" value="$(find rasberry_agricultural_costmaps)/worlds/open_fields.world"/>

  <!-- Launch the Gazebo world.  -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="gui" value="$(arg gui)" />
  </include>

    <!-- model bringup -->
  <include file="$(find thorvald_model)/launch/model.launch">
      <arg name="robot_model" value="$(arg robot_model)" />
      <arg name="model_extras" value="$(arg model_extras)" />
  </include>

  <!-- base bringup-->
<include file="$(find thorvald_base)/launch/base_bringup.launch">
    <arg name="robot_model" value="$(arg robot_model)" />
    <arg name="simple_sim" value="True" />
    <arg name="enable_odom_tf" value="false" />
    <arg name="odom_frame_id" value="odom" />
</include>

<!-- teleop bringup -->
<include file="$(find thorvald_teleop)/launch/teleop_xbox.launch" if="$(arg with_teleoperation)">
  <arg name="joy_dev" value="$(arg joy_dev)" />
</include>

<!-- twist mux bringup -->
<include file="$(find thorvald_twist_mux)/launch/twist_mux.launch" />

<!-- spawn robot in gazebo -->
<node pkg="gazebo_ros" type="spawn_model" name="spawner" args="-urdf -param robot_description -model thorvald_ii -x $(arg x) -y $(arg y) -z $(arg z)
-R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" />

<node pkg="rviz" type="rviz" name="rviz" args="-d $(find rasberry_agricultural_costmaps)/rviz/custom_rviz_open_fields.rviz" />

</launch>
